<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cz3002project.GamesMenu">

    <TextView android:text="Let's Play!" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" android:gravity="center" android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gamesMenuButtonGame1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Balance The Ball"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:background="@drawable/balancingicon"
            android:onClick="PlayGame1"/>

        <Button
            android:id="@+id/gamesMenuButtonGame2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Shape Tracing"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:background="@drawable/shapetracingicon"
            android:onClick="PlayGame2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/gamesMenuButtonGame3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Word Voicing"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:background="@drawable/wordvoicingicon"
            android:onClick="PlayGame3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

    </LinearLayout>
    <Button
        android:text="Statistics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:onClick="ViewStatistics"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
</LinearLayout>
