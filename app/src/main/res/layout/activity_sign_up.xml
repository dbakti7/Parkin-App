<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"  tools:context="com.example.android.cz3002project.SignUpActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp" android:layout_weight="3"
        android:src="@drawable/parkinapp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <EditText
        android:id="@+id/signUpEditTextName"
        android:inputType="text"
        android:hint="Name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/signUpEditTextEmail"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/signUpEditTextPhoneNumber"
        android:inputType="phone"
        android:gravity="center"
        android:hint="Phone Number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/signUpEditTextPassword"
        android:inputType="text"
        android:hint="Password"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:password="true"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/signUpEditTextRepeatPassword"
        android:inputType="text"
        android:gravity="center"
        android:hint="Repeat Password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:password="true"/>

    <Button
        android:id="@+id/signUpButtonSignUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/signupbutton"
        android:onClick="UserSignUp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
</LinearLayout>
