<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cz3002project.Game3">


    <TextView android:text="Voice The Words!" android:layout_width="match_parent"
        android:textSize="42sp"
        android:layout_height="0dp"
        android:layout_weight="1" android:gravity="center" android:textStyle="bold" />

    <TextView
        android:id="@+id/game3TextViewTimer"
        android:text="Timer here"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="@color/material_blue_grey_800"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView android:text="Desible Value" android:layout_width="match_parent"
        android:id="@+id/status"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView android:text="Make your voice as loud as possible!" android:layout_width="match_parent"
        android:textSize="24sp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"/>


</LinearLayout>
