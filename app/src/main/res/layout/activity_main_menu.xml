<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.android.cz3002project.MainMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/menuTVUserName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"  />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"  />
        <Button
            android:id="@+id/menuButtonLogOut"
            android:text="Log Out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="LogOut"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp" android:layout_weight="3"
        android:src="@drawable/parkinapp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <TextView android:text="Parkin App" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" android:gravity="center" android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/menuButtonPlayGames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/playgamebutton"
        android:onClick="PlayGames"/>

    <Button
        android:id="@+id/menuButtonSetReminder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/setreminderbutton"
        android:onClick="SetReminder"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
